<h1>Edit Preferences</h1>

<%= form_for @preference  do |f| %>
  <%= f.label :artist_sort_order %>
  <%= f.text_field :artist_sort_order %>
  <br />
    <%= f.label :song_sort_order %>
  <%= f.text_field :song_sort_order %>
  <br />
    <%= f.label :allow_create_artists %>
  <%= f.text_field :allow_create_artists %>
  <br />
    <%= f.label :allow_create_songs %>
  <%= f.text_field :allow_create_songs %>
  <br />

  <%= f.submit %>
<% end %>

<h1>Current Preferences</h1>

<label>Artist Sort Order</label>
<p><%= artist_sort_order %></p>
<label>Song Sort Order</label>
<p><%= song_sort_order %></p>
<label>Create Artist Allowed?</label>
<p><%= allow_create_artists %></p>
<label>Create Songs Allowed?</label>
<p><%= allow_create_songs %></p>