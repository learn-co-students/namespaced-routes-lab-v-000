<%= form_for @preference, url: admin_preference_path(@preference) do |f| %>
  <div>
    <%= f.label 'Allow Song Creation' %> <br>
    True: <%= f.radio_button :allow_song_creation, true %>
    False: <%= f.radio_button :allow_song_creation, false %>
  </div>
  <div>
    <%= f.label 'Allow Artist Creation' %> <br>
    True: <%= f.radio_button :allow_artist_creation, true %>
    False: <%= f.radio_button :allow_artist_creation, false %>
  </div>
  <div>
    <%= f.label 'Song Sort Order' %> <br>
    Ascending: <%= f.radio_button :song_sort_order, 'ASC' %>
    Descending: <%= f.radio_button :song_sort_order, 'DESC' %>
  </div>
  <div>
    <%= f.label 'Artist Sort Order' %> <br>
    Ascending: <%= f.radio_button :artist_sort_order, 'ASC' %>
    Descending: <%= f.radio_button :artist_sort_order, 'DESC' %>
  </div>
<% end %>