<h1>Settings Page</h1>

Current Settings: <br>
Song Sort Order: <%= @preference.song_sort_order %> <br>
Artist Sort Order: <%= @preference.artist_sort_order %>

<h2>Change Settings:</h2>
<%= form_for @preference, url: admin_settings_path(@preference) do |f| %>
  <ul>
  <%= f.label :song_sort_order %>: <br>
  <%= f.radio_button(:song_sort_order, "ASC") %>
  <%= f.label :song_sort_order_asc, "Ascending" %> <br>
  <%= f.radio_button(:song_sort_order, "DESC") %> 
  <%= f.label :song_sort_order_desc, "Descending" %> <br>
  <%= f.label :artist_sort_order %>: <br>
  <%= f.radio_button(:artist_sort_order, "ASC") %> 
  <%= f.label :artist_sort_order_asc, "Ascending" %> <br>
  <%= f.radio_button(:artist_sort_order, "DESC") %> 
  <%= f.label :artist_sort_order_desc, "Descending" %> <br>
  <%= f.submit %>
<% end %>

