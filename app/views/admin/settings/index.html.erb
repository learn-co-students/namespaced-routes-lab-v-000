<h1>Adjust Settings</h1>
<%= form_for @preference, url: admin_settings_path(@preference) do |f| %>
  <%= f.label :song_sort_order %>
  <br>
  ASC: <%= f.radio_button(:song_sort_order, "ASC") %><br>
  DESC: <%= f.radio_button(:song_sort_order, "DESC") %><br>
  <br>
  <%= f.label :artist_sort_order %>
  <br>
  ASC: <%= f.radio_button(:artist_sort_order, "ASC") %><br>
  DESC: <%= f.radio_button(:artist_sort_order, "DESC") %><br>
  <br>
  <%= f.submit %>
<% end %>
