<h1>Admin - Settings</h1>
<%= form_for @preference, url: admin_settings_path(@preference)  do |f| %>
  <%= f.label :song_sort_order %>
  <p>Descending: <%= f.radio_button :song_sort_order, "DESC" %> </p>
  <p>Ascending: <%= f.radio_button :song_sort_order, "ASC" %> </p>

  <%= f.label :artist_sort_order %>
  <p>Descending: <%= f.radio_button :artist_sort_order, "DESC" %> </p>
  <p>Ascending: <%= f.radio_button :artist_sort_order, "ASC" %> </p>

  <%= f.submit %>
<% end %>

